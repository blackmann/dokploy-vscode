{
  "name": "dokploy-vscode",
  "displayName": "Dokploy",
  "description": "Monitor Dokploy deployments and logs directly in VS Code",
  "version": "0.0.1",
  "publisher": "blackmann",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:dokployDeployments"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dokploy",
          "title": "Dokploy",
          "icon": "resources/icons/dokploy.svg"
        }
      ]
    },
    "views": {
      "dokploy": [
        {
          "id": "dokployDeployments",
          "name": "Deployments"
        }
      ]
    },
    "commands": [
      {
        "command": "dokploy.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Dokploy"
      },
      {
        "command": "dokploy.viewLogs",
        "title": "View Logs",
        "icon": "$(output)",
        "category": "Dokploy"
      },
      {
        "command": "dokploy.viewRuntimeLogs",
        "title": "View Runtime Logs",
        "icon": "$(terminal)",
        "category": "Dokploy"
      },
      {
        "command": "dokploy.openInBrowser",
        "title": "Open in Browser",
        "icon": "$(link-external)",
        "category": "Dokploy"
      },
      {
        "command": "dokploy.configure",
        "title": "Configure",
        "icon": "$(gear)",
        "category": "Dokploy"
      },
      {
        "command": "dokploy.addServer",
        "title": "Add Server",
        "icon": "$(add)",
        "category": "Dokploy"
      },
      {
        "command": "dokploy.redeploy",
        "title": "Redeploy",
        "icon": "$(rocket)",
        "category": "Dokploy"
      },
      {
        "command": "dokploy.showOutput",
        "title": "Show Output",
        "icon": "$(output)",
        "category": "Dokploy"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dokploy.refresh",
          "when": "view == dokployDeployments",
          "group": "navigation"
        },
        {
          "command": "dokploy.addServer",
          "when": "view == dokployDeployments",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "dokploy.viewLogs",
          "when": "view == dokployDeployments && viewItem == deployment",
          "group": "inline"
        },
        {
          "command": "dokploy.openInBrowser",
          "when": "view == dokployDeployments && viewItem == application",
          "group": "inline"
        },
        {
          "command": "dokploy.redeploy",
          "when": "view == dokployDeployments && viewItem == application"
        },
        {
          "command": "dokploy.viewRuntimeLogs",
          "when": "view == dokployDeployments && viewItem == application"
        }
      ]
    },
    "configuration": {
      "title": "Dokploy",
      "properties": {
        "dokploy.servers": {
          "type": "array",
          "default": [],
          "description": "Dokploy server configurations",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "endpoint": {
                "type": "string"
              }
            }
          }
        },
        "dokploy.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Auto-refresh interval in seconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "ansi-to-html": "^0.7.2",
    "ws": "^8.18.3"
  }
}
